<%- model_class = Accommodation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @accommodation.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:brief_description) %>:</strong></dt>
  <dd><%= @accommodation.brief_description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @accommodation.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:province_id) %>:</strong></dt>
  <dd><%= @accommodation.province_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:city) %>:</strong></dt>
  <dd><%= @accommodation.city %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @accommodation.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:postal_code) %>:</strong></dt>
  <dd><%= @accommodation.postal_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:featured) %>:</strong></dt>
  <dd><%= @accommodation.featured %></dd>
  <dt><strong><%= model_class.human_attribute_name(:published) %>:</strong></dt>
  <dd><%= @accommodation.published %></dd>
  <dt><strong><%= model_class.human_attribute_name(:category_id) %>:</strong></dt>
  <dd><%= @accommodation.category_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:landlord_id) %>:</strong></dt>
  <dd><%= @accommodation.landlord_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              accommodations_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_accommodation_path(@accommodation), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              accommodation_path(@accommodation),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
