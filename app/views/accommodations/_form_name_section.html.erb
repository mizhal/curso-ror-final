<div class="name-section">
	<fieldset>
	  <legend class="foldable"><%=t ".identification_fields"%></legend>
	  <div class="control-group">
	    <%= f.label :name, :class => 'control-label' %>
	    <div class="controls">
	      <%= f.text_field :name, :class => 'text_field' %>
	    </div>
	  </div>
	
	  <div class="control-group">
	    <%= f.label :category_id, :class => 'control-label' %>
	    <div class="controls">
	      <%= select nil, nil, @top_categories.map{|c| [c.name, c.id]} %>
	      <%= f.select :category_id, @subcategories.map{|c| [c.name, c.id]} %>
	    </div>
	  </div>
	</fieldset>
</div>