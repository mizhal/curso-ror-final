<div class="name-section">
	<fieldset>
	  <legend class="foldable"><%=t ".identification_fields"%></legend>
	  <div class="control-group">
	    <%= f.label :name, :class => 'control-label' %>
	    <div class="controls">
	      <%= f.text_field :name, :class => 'text_field input-block-level' %>
	    </div>
	  </div>
	
	  <div class="control-group">
	    <%= f.label :category_id, :class => 'control-label' %>
	    <div class="controls">
	      <%= f.select :parent_category_id, 
	      	@top_categories.map{|c| [c.name, c.id]},
	      	{}, 
	      	:id => "toplevel-categories",
	      	:class => "input-block-level" %>
	      <%= f.select :category_id, 
	      	@sibling_categories.map{|c| [c.name, c.id]},
	      	{},
	      	:class => "input-block-level" %>
	    </div>
	  </div>
	</fieldset>
</div>