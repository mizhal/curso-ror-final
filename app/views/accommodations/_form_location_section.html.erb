<div class="location-section">
	<fieldset>
	  <legend class="foldable"><%=t ".location_fields" %></legend>
	  <div class="control-group">
	    <%= f.label :province_id, :class => 'control-label' %>
	    <div class="controls">
	        <%= select nil, nil, 
	        	@countries.map{|m|[m.name, m.id]}, 
	        	:class => 'input-block-level' 
	        %>
	        <%= f.select :province_id, 
	        	@provinces.map{|p|[p.name, p.id]}, 
	        	:class => 'input-block-level' %>
	    </div>
	  </div>
	 
	  <div class="control-group">
	    <%= f.label :city, :class => 'control-label' %>
	    <div class="controls">
	      <%= f.text_field :city, :class => 'text_field' %>
	    </div>
	  </div>
	  
	  <div class="control-group">
	    <%= f.label :address, :class => 'control-label' %>
	    <div class="controls">
	      <%= f.text_field :address, :class => 'text_field' %>
	    </div>
	  </div>
	  
	  <div class="control-group">
	    <%= f.label :postal_code, :class => 'control-label' %>
	    <div class="controls">
	      <%= f.number_field :postal_code, :class => 'number_field' %>
	    </div>
	  </div>
	</fieldset>
</div>