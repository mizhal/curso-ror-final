		  
<div class="description-section">
  <fieldset>
    <legend class="foldable"><%=t(".description fields")%></legend>		 
	  <div class="control-group">
	    <%= f.label :slogan, :class => 'control-label' %>
	    <div class="controls">
	      <%= f.text_field :slogan, :class => 'text_field input-block-level' %>
	    </div>
	  </div> 
	  <div class="control-group">
	    <%= f.label :brief_description, :class => 'control-label' %>
	    <div class="controls">
	      <%= f.text_area :brief_description, 
	      	:class => 'text_area input-block-level', :rows => 5 %>
	    </div>
	  </div>
	  
	  <div class="control-group">
	    <%= f.label :description, :class => 'control-label' %>
	    <div class="controls">
	      <%= f.text_area :description, 
	      	:class => 'text_area input-block-level',
	      	:rows => 15 %>
	    </div>
	  </div>
	  
	  <div class="control-group">
	    <%= f.label :rooms_description, :class => 'control-label' %>
	    <div class="controls">
	      <%= f.text_area :rooms_description, 
	      	:class => 'text_area input-block-level',
	      	:rows => 15 %>
	    </div>
	  </div>
	  
  </fieldset>
</div>