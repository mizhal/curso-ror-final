<%= form_for @config_value, :html => { 
		:class => 'form-horizontal',
		:multipart => true
	} do |f| %>
  <div class="control-group">
    <%= f.label :key, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :key, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :value, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :value, :class => 'text_field' %>
    </div>
  </div>
  <%= f.fields_for :photo_attributes do |p| %>
	  <div class="control-group">
	    <%= p.label :image, :class => 'control-label' %>
	    <div class="controls">
	      <%= p.file_field :image %>
	    </div>
	  </div>
  <% end %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                config_values_path, :class => 'btn' %>
  </div>
<% end %>
