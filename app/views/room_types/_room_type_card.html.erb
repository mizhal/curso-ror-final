<article class="room-type-card">
	<h1>
		<%= link_to room_type.name, 
			accommodation_room_type_path(room_type.accommodation.id, room_type.id) 
		%>
	</h1>
	<%= image_tag room_type.main_photo(:thumbnail), :alt => room_type.name %>
	<section>
		<p><%= simple_format room_type.brief_description %></p>
		<h2><%= t(".characteristics") %></h2>
		<p><%= simple_format room_type.characteristics %></p>
	</section>
</article>
