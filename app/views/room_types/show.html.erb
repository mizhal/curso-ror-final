<%- model_class = RoomType -%>

<% content_for :view_title do %>
	<%=t '.title', :default => model_class.model_name.human %>
<% end %>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @room_type.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:brief_description) %>:</strong></dt>
  <dd><%= @room_type.brief_description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @room_type.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:accommodation_id) %>:</strong></dt>
  <dd><%= @room_type.accommodation_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              accommodation_room_types_path(@accommodation), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_accommodation_room_type_path(@accommodation, @room_type), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              accommodation_room_type_path(@accommodation, @room_type),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
