<%- model_class = Offer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @offer.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:summary) %>:</strong></dt>
  <dd><%= @offer.summary %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @offer.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @offer.price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:accommodation_id) %>:</strong></dt>
  <dd><%= link_to @offer.accommodation.name, accommodation_path(@offer.accommodation_id) %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              accommodation_offers_path(:accommodation_id => params[:accommodation_id]), 
              :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_accommodation_offer_path(@offer.accommodation, @offer), 
              :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              accommodation_offer_path(@offer.accommodation, @offer),
              :method => 'delete',
              :data => { 
              	:confirm => t('.confirm', 
              		:default => t("helpers.links.confirm", :default => 'Are you sure?')
              	) 
              },
              :class => 'btn btn-danger' %>
</div>
