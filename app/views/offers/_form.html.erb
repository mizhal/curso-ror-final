<%= render :partial => "shared/validation_errors", :locals => {target: @offer}%>

<%= form_for [@accommodation, @offer], 
	:html => { :class => 'form-horizontal', :multipart => true } do |f| %>
  <div class="control-group">
  	<%= f.hidden_field :accommodation_id %>
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field input-block-level' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :summary, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :summary, 
      	:class => 'text_area input-block-level',
      	:rows => 3 %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, 
      	:class => 'text_area input-block-level',
      	:rows => 10 %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :price, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :price, :class => 'text_field input-block-level' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :accommodation, :class => 'control-label' %>
    <div class="controls">
	    <div class="uneditable-input input-block-level">
	      <%= f.object.accommodation.name %>
	    </div>
    </div>
  </div>
  
  <%= render :partial => "photos/nested_photos_section", 
    :locals => {f:f}
  %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                accommodation_offers_path(:accommodation_id => params[:accommodation_id]), 
                :class => 'btn' %>
  </div>
<% end %>
