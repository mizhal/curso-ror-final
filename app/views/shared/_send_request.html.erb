<div class="send-request">
	<h1><%=t '.send' %> <span class="request"><%=t '.request'%></span></h1>
	<%= form_for :request, 
		:url => requests_path do |f| %>
		<div>
			<%= f.label :name %>
			<%= f.text_field :name %>
		</div>
		<div>			
			<%= f.label :email%>
			<%= f.text_field :email %>
		</div>
		<div>
			<%= f.label :query %>
			<%= f.text_area :query, :rows => 3 %>
		</div>
		<div>
			<%= f.submit t(".send", :default => "send") %>
		</div>
	<% end %>
</div>
